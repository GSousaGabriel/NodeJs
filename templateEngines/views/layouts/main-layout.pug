doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
    body
        header.mainHeader
            nav.mainHeaderNav
                ul.mainHeaderNavList
                    li.mainHeaderNavItem
                        a(href="/", class=(path==='/'? 'active' : '')) Shop
                    li.mainHeaderNavItem
                        a.active(href="admin/add-product", class=(path==='admin/add-product'? 'active' : '')) Add product
        block content